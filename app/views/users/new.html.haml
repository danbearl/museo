%h1 Create New User

= form_for @user do |f|
  .error_messages
    - if @user.errors.any?
      %h2 Form is invalid
      %ul
        - @user.errors.full_messages.each do |message|
          = message

  .field
    = f.label :name
    %br
    = f.text_field :name

  .field
    = f.label :password
    %br
    = f.password_field :password

  .field
    = f.label :password_confirmation
    %br
    = f.password_field :password_confirmation

  .action
    = f.submit
      
