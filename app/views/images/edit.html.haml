%h1= "Editing #{gallery.name} :: #{image.title}"

= form_for image, :url => {:action => "update"} do |f|

  - if image.errors.any?
    .errors
      %h2 Form invalid
      %ul
        - image.errors.full_message.each do |message|
          %li= message

  .field
    = f.label :title
    %br
    = f.text_field :title

  .field
    = f.label :category
    %br
    = f.text_field :category

  .field
    = f.label :medium
    %br
    = f.text_field :medium

  .field
    = f.label :dimensions
    %br
    = f.text_field :dimensions

  .field
    = f.file_field :picture

  .action
    = f.submit

.bottom_nav
  =link_to "Back", gallery
